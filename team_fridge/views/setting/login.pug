extends ../layout_home
block content
    link(rel="stylesheet", href="/css/setting.css")
    link(rel="stylesheet", href="/css/setting_login.css")
    script(src="/js/setting_menu.js")
    script(src="/js/setting_login.js")
    div.main
      div.body
        section.main
          article.login_body
            h2 로그인
            form.login(method="post")
              input.userid(name="userid" placeholder="아이디")
              input.password(id="password" name="password" placeholder="비밀번호" type="password")
              button.btn_login(type="button") 로그인
              button.btn_join(type="button") 회원가입
