extends ../layout_home

block content
    link(rel="stylesheet", href="/css/fridge/list_fridge.css")
    link(rel="stylesheet", href="/css/thema/fridge_add_thema.css")
    script(src="/js/list_fridge.js")
    script(src="/js/setting/setting_thema.js") 
    div.body
        section.list 
            div.list.btn
                a 냉장고 추가 
                    i.fa.fa-lemon
                a 장바구니 추가 
                    i.fa.fa-shopping-cart
            div.list.fridge
                each item in FR
                    ul(data-num = `${item.f_seq}`)
                        li
                            div.setting 
                                a(href=`/fridge/${item.f_seq}/fridge_update`)(data-update = `${item.f_seq}`) 
                                    i.fa.fa-wrench
                                div.img
                                    if item.f_image_name
                                        img(src=`/uploads/${item.f_image_name}` )
                                    else 
                                        img(src="/images/noImage.svg" )
                            div.span
                                span.list.div= item.f_div
                                span.list.name= item.f_name


