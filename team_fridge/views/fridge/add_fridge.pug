extends ../layout_home

block content
    link(rel="stylesheet", href="/css/fridge/add_fridge.css")
    script(src="/js/add_fridge.js")
    div.body
        section    
            form.add(method="POST")
                h1 냉장고 추가
                div.add
                    div.photo
                        label.photo(for="selectfile") 사진등록
                            input.add.photo(id="selectfile" name="f_photo" type="file" accept="image/*")
                            img.pre
                div.select
                    label#fresh(for="selecttem" value="fresh") 냉장
                    label#cold(for="selecttem" value="cold") 냉동
                    label#out(for="selecttem" value="out") 실외
                        input.add.select(id="selecttem" name="f_div")
                div.input
                    div.add.error
                    input#f_name(name="f_name" placeholder="냉장고 이름을 입력하세요")
                    input#f_memo(name="f_memo" placeholder="메모를 입력하세요")
                div.btn
                    a(href="/list_fridge") 
                        input#f_btn(type="submit" value="추가")





