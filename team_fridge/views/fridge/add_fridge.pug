extends ../layout_home

block content
    link(rel="stylesheet", href="/css/fridge/add_fridge.css")
    script(src="/js/add_fridge.js")
    div.body
        section    
            form.add(method="POST")
                h1 냉장고 추가
                div.add
                    div.photo
                        label.photo(for="selectfile") 사진등록
                            input.add.photo(id="selectfile" name="photo" value=`${FRI.fr_photo}` type="file" accept="image/*")
                div.select
                    div.add.error
                    input#fresh(type="button" name="fresh" value=`${FRI.fr_fresh}`)
                    input#cold(type="button" name="cold" value=`${FRI.fr_cold}`)
                    input#out(type="button" name="out" value=`${FRI.fr_out}`)
                div.input
                    div.add.error
                    input#f_name(name="f_name" value=`${FRI.fr_name}` placeholder="냉장고 이름을 입력하세요")
                    input#f_memo(name="f_memo" placeholder="메모를 입력하세요")
                div.btn
                    div.add.error
                    input#f_btn(type="submit" value="추가")





